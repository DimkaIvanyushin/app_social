$button-color = #5682a3;
$border-color = #b5b5b5;

.content
    background-color: #ececec
    height: 100vh;

.menu
    padding: 0
    box-shadow: 0px 0px 15px #00000017;
    background-color: white;

    ul
        display: flex;
        justify-content: space-between
        padding: 0;
        margin: 0;

        li
            list-style: none
            padding: 5px 20px 5px 20px;

            a 
                color: $border-color
                font-size: 18px;

            .active
                color: #5682a3